x = 1
y = 2
if x == y:
    print("ejecute")
elif x < y:
    print("si no sucede, el siguiente, se pueden indexar varios en cola")
else:
    print("esto es ya si no sucede ni mierda XD")

while x == y:
    print("ejecute")
    #se puede modificar lso valores para parar o continuar el ciclo

for x in range(4):
    print("ejecuta n veces el ciclo")
for x in range(1,50,2):
    print("primeros dos son para desde donde hasta donde, el ultimo son los pasos que recorre")


try:
    print("intenta un proceso asi no sea correcto")
except:
    print("crea una excepcion donde puede dar error")
# tambien sirve un else
finally:
    print("ejecuta halla o no halla error")

if x == y:
    raise Exception("crea un error")